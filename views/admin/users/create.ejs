<%- include('../../partials/header') %> <%- include('../../partials/navbar') %>

<div class="container">
  <hr />
  <div class="card mt-4">
    <div class="card-header">
      <h2>Criação de usuário</h2>
    </div>
    <div class="card-body">
      <form action="/users/create" method="post">
        <input
          class="form-control"
          type="email"
          name="email"
          placeholder="exemplo@email.com"
        />
        <br />
        <input
          class="form-control"
          type="password"
          name="password"
          placeholder="*******"
        />
        <br />
        <div class="d-grid">
          <button type="submit" class="btn btn-success btn-block">Criar</button>
        </div>
      </form>
    </div>
  </div>
</div>

